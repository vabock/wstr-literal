{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--all-features",
				"--workspace"
			],
			"group": "test",
			"label": "rust: cargo test workspaces"
		},
		{
			"type": "cargo",
			"command": "doc",
			"problemMatcher": [
				"$rustc"
			],
			"args": [
				"--no-deps",
				"--workspace",
				"--open"
			],
			"group": "build",
			"label": "rust: cargo doc"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"args": [
				"--workspace",
				"--all-features"
			],
			"label": "rust: cargo clippy"
		}
	]
}